@model QLKTX.Models.SinhVien
@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
@section sidebarLeftUser{
    <ul class="sidebar-left-navbar-nav">
        <li class="sidebar-left-navbar-nav-item active">
            <a href="~/User/TrangChu" class="sidebar-left-navbar-nav-item-link">
                <i class="fa-light fa-grid-2"></i>
                Trang chủ
            </a>
        </li>
        <li class="sidebar-left-navbar-nav-item ">
            <a href="~/User/ThongTinSinhVien" class="sidebar-left-navbar-nav-item-link">
                <i class="fa-light fa-user"></i>
                Hồ sơ sinh viên
            </a>
        </li>
        <li class="sidebar-left-navbar-nav-item">
            <a href="#" class="sidebar-left-navbar-nav-item-link">
                <i class="fa-light fa-leaf"></i>
                Gia nhập
            </a>
        </li>
        <li class="sidebar-left-navbar-nav-item">
            <a href="#" class="sidebar-left-navbar-nav-item-link">
                <i class="fa-light fa-file"></i>
                Biễu mẫu
            </a>
        </li>
        <li class="sidebar-left-navbar-nav-item">
            <a href="#" class="sidebar-left-navbar-nav-item-link">
